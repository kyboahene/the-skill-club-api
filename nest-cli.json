{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "../mail-templates/**/*",
      {
        "include": "../mail-templates/**/*",
        "outDir": "mail-templates",
        "watchAssets": true
      }
    ],
    "watchAssets": true
  }
}
