# Environment variables for NestJS Starter Kit

# Application
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/starter_db?schema=public"

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_REFRESH_SECRET=your_super_secret_refresh_jwt_key_here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Redis (optional for caching/sessions)
REDIS_URL=redis://localhost:6379

# Email Configuration
EMAIL_HOST=smtp.zoho.com
EMAIL_PORT=587
EMAIL_ADDRESS=no-reply@yourdomain.com
EMAIL_PASS=your_zoho_app_password

# SMS Configuration (Hubtel)
CLIENT_ID=your_hubtel_client_id
CLIENT_SECRET=your_hubtel_client_secret
FROM=your_sender_id

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# File Uploads (optional)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Better Auth
BETTER_AUTH_URL=http://localhost:3000/api
BETTER_AUTH_SECRET=change_me
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
